      e=false;
      f=false;
      g=false;
      h=true;
      i=false;
      j=false;
      purple=false;
      green=false;
      blue=false;
      yellow=false;
      orange=false;
      red=false;
    }
    if (abs(mouseX-25)<25&&abs(mouseY-375)<25) {
      a=false;
      b=false;
      c=false;
      d=false;
      e=false;
