    if (abs(mouseX-25)<25&&abs(mouseY-25)<25) {
      red=true;
      green=false;
      orange=false;
      blue=false;
      yellow=false;
      purple=false;
      a=false;
      b=false;
      c=false;
      d=false;
      e=false;
      f=false;
      g=false;
      h=false;
      i=false;
      j=false;
