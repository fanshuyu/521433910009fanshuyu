  }

  if (mouseButton==RIGHT&&abs(mouseX-50)<50&&abs(mouseY-75)<75) {
    size=true;
    clean=false;
  }
  if (mouseButton==RIGHT&&abs(mouseX-50)<50&&abs(mouseY-600)<50) {
    clean=true;
    size=false;
  }
  if (clean) {
    if (mousePressed&&mouseButton==RIGHT) {
      if (abs(mouseX-50)<25&&abs(mouseY-600)<25) {
        cleanAll=true;
      }
    }
  }
  if (size) {
    if (mouseButton==RIGHT) {
      if (abs(mouseX-45)<35) {
        if (abs(mouseY-30)<2) {
          num=2;
        }
        if (abs(mouseY-60)<3) {
          num=5;
        }
        if (abs(mouseY-100)<5) {
          num=10;
        }
      }
    }
  }
}
